<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
        {% block title %}DocManager{% endblock %}
    </title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/font-awesome-4.3.0/css/font-awesome.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/jquery-ui.min.css') }}">

    <style>
        body { padding-top: 70px; }
        .navbar-custom{ background-color: #5F9EA0; }

    </style>
    {% block style %}{% endblock %}

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <script src="{{ asset('js/jquery.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/jquery-ui.min.js') }}"></script>
    <script src="{{ asset('js/ckeditor/ckeditor.js') }}"></script>
</head>
<body>
<nav class="navbar-custom navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#menu-navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span style="background-color: white" class="icon-bar"></span>
                <span style="background-color: white" class="icon-bar"></span>
                <span style="background-color: white" class="icon-bar"></span>
            </button>
            <a class="brand-custom navbar-brand" href="{{ path('doc_manager_document_index') }}" style="color: white;">DocManager</a>
        </div>
        <div class="collapse navbar-collapse" id="menu-navbar-collapse">
            {{ render(controller("DocManagerDocumentBundle:Document:countoutofdate")) }}

            <ul class="nav navbar-nav navbar-right">
                {% if app.user is not null and is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    <li><a href="{{ path('fos_user_profile_show') }}" style="color: white;">Bienvenue {{ app.user.username|capitalize }}{% if is_granted('ROLE_PREMIUM') %} <i class="fa fa-star" style="color: #ffcc00"></i>{% endif%}</a></li>
                    <li><a href="{{ path('fos_user_security_logout') }}" style="color: white;">Deconnexion</a></li>
                {% else %}
                    <li><a href="{{ path('fos_user_security_login') }}" style="color: white;">Connexion</a></li>
                    <li><a href="{{ path('fos_user_registration_register') }}" style="color: white;">Inscription</a></li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>
{% block titreSite %}
    <div class="container">
        <div class="row">

            <div class="well">
                <h1>Syst√®me de gestion de documents personnels</h1>
            </div>
    </div>
    <div class="row">
{% endblock %}

        {% block body %}

        {% endblock %}

    </div>
</div>
</body>
</html>